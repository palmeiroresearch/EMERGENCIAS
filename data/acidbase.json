        "euvolemia_siadh": "Restricción hídrica 800-1000ml/día",
        "hipervolemia": "Restricción Na+ y agua + diuréticos"
      },

      "siadh": {
        "criterios": [
          "Hiponatremia hipotónica",
          "Orina no diluida (Osm >100)",
          "Na urinario >20",
          "Euvolemia clínica"
