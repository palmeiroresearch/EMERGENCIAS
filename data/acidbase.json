{
  "acidosis_metabolica": {
    "nombre": "Acidosis Metabólica",
    "categoria": "acidobase",
    "criterio": "pH <7.35 y HCO3 <22 mEq/L",
    
    "clasificacion_anion_gap": {
      "formula": "AG = Na - (Cl + HCO3)",
      "normal": "8-12 mEq/L",
      
      "ag_elevado": {
        "valor": ">12 mEq/L",
        "causas_mudpiles": {
          "M": "Metanol",
          "U": "Uremia",
          "D": "Cetoacidosis diabética",
          "P": "Paraldehído, Propilen glicol",
          "I": "Isoniazida, Hierro",
          "L": "Acidosis láctica",
          "E": "Etilenglicol",
          "S": "Salicilatos"
        }
      },
      
      "ag_normal": {
        "valor": "8-12 mEq/L",
        "causas": ["Diarrea", "Acidosis tubular renal", "Pérdidas urinarias HCO3"]
      }
    },

    "acidosis_lactica": {
      "tipo_a": {
        "nombre": "Hipoperfusión tisular",
        "causas": ["Shock", "Sepsis", "Hipoxia severa", "Convulsiones", "Ejercicio extremo"],
        "tratamiento": "Corregir causa subyacente (mejorar perfusión, oxigenación)"
      },
      "tipo_b": {
        "nombre": "Sin hipoperfusión",
        "causas": ["Metformina", "Cianuro", "Insuficiencia hepática", "Neoplasias"],
        "tratamiento": "Suspender agente causal, soporte"
      }
    },

    "cetoacidosis_diabetica": {
      "criterios": ["Glicemia >250 mg/dL", "pH <7.3", "HCO3 <18", "Cetonas positivas"],
      
      "tratamiento": {
        "hidratacion": {
          "inicial": "SSN 0.9% 1-2L en primera hora",
          "luego": "250-500 ml/h según estado hemodinámico",
          "meta": "Reposición déficit 50% en 12h, resto en 24h"
        },
        
        "insulina": {
          "sin_hipocalemia": {
            "bolo": "0.1 UI/kg IV (puede omitirse)",
            "infusion": "0.1 UI/kg/h",
            "meta": "Descenso glicemia 50-75 mg/dL por hora"
          },
          "con_hipocalemia": "Reponer K+ antes de insulina"
        },
        
        "potasio": {
          "si_k_menor_3_3": "Reponer K+ antes de insulina",
          "si_k_3_3_a_5": "Agregar 20-30 mEq/L a líquidos IV",
          "si_k_mayor_5": "No reponer, monitorear"
        },
        
        "bicarbonato": {
          "indicacion": "SOLO si pH <6.9",
          "dosis": "100 mEq NaHCO3 en 400ml agua estéril con 20mEq KCl en 2h",
          "controversia": "Uso muy limitado"
        },
        
        "cuando_cambiar_liquidos": {
          "criterio": "Glicemia <250 mg/dL",
          "cambiar_a": "DW5% + SSN 0.45% con 20-30 mEq KCl/L",
          "razon": "Prevenir hipoglucemia mientras se corrige acidosis"
        }
      },
      
      "criterios_resolucion": [
        "Glicemia <200 mg/dL",
        "pH >7.3",
        "HCO3 >15 mEq/L",
        "Anion gap <12"
      ],
      
      "transicion": "Iniciar insulina SC cuando pueda comer, mantener IV 1-2h después de SC"
    },

    "tratamiento_bicarbonato": {
      "indicaciones_controvertidas": [
        "pH <7.1 (única indicación relativa)",
        "Hipercalemia severa (temporización)",
        "Intoxicación ADT, cocaína"
      ],
      
      "calculo": {
        "formula": "mEq HCO3 = 0.3 × peso (kg) × (HCO3 deseado - actual)",
        "ejemplo": "Paciente 70kg con HCO3 8, desea 15: 0.3 × 70 × 7 = 147 mEq",
        "administracion": "Dar la mitad en 3-4 horas, reevaluar"
      },
      
      "precauciones": [
        "Sobrecarga de Na+",
        "Alcalosis de rebote",
        "↑PCO2 (empeora acidosis intracelular)",
        "Hipocalemia",
        "Hipoxia tisular (desviación curva Hb)"
      ]
    }
  },

  "alcalosis_metabolica": {
    "nombre": "Alcalosis Metabólica",
    "categoria": "acidobase",
    "criterio": "pH >7.45 y HCO3 >26 mEq/L",
    
    "clasificacion": {
      "salino_sensible": {
        "cl_urinario": "<20 mEq/L",
        "causas": ["Vómitos", "SNG", "Diuréticos", "Post-hipercapnia"],
        "tratamiento": "SSN 0.9%"
      },
      "salino_resistente": {
        "cl_urinario": ">20 mEq/L",
        "causas": ["Hiperaldosteronismo", "Síndrome Cushing", "Exceso mineralocorticoides"],
        "tratamiento": "Corregir causa, ahorradores de K+"
      }
    },

    "tratamiento": {
      "salino_sensible": {
        "hidratacion": "SSN 0.9% 100-200 ml/h",
        "reposicion_k": "KCl según necesidad",
        "meta": "Corregir contracción volumen"
      },
      "salino_resistente": {
        "espironolactona": "25-100 mg/día",
        "amilorida": "5-10 mg/día",
        "tratar_causa": "Corregir hiperaldosteronismo"
      },
      "severa": {
        "criterio": "pH >7.6",
        "opciones": ["Acetazolamida 250-500mg", "HCl 0.1N (UCI)", "Hemodiálisis"]
      }
    }
  },

  "hipercalemia": {
    "nombre": "Hipercalemia",
    "categoria": "electrolitos",
    "niveles": {
      "leve": "5.5-6.0 mEq/L",
      "moderada": "6.1-7.0 mEq/L",
      "severa": ">7.0 mEq/L"
    },

    "manifestaciones": {
      "ecg": ["Ondas T picudas", "↑PR", "↓QRS", "Pérdida onda P", "Ritmo sinusoidal"],
      "neuromusculares": ["Debilidad", "Parálisis", "Parestesias"]
    },

    "tratamiento_urgente": {
      "paso_1_cardioproteccion": {
        "cuando": "Cambios ECG o K >6.5",
        "medicamento": "Gluconato de calcio",
        "dosis": "1-2g (10-20ml al 10%) IV lento en 2-5min",
        "inicio": "1-3 minutos",
        "duracion": "30-60 minutos",
        "repetir": "Si persisten cambios ECG",
        "nota": "NO corrige K+, solo estabiliza membrana"
      },

      "paso_2_shift_intracelular": {
        "opciones": [
          {
            "medicamento": "Insulina + Dextrosa",
            "dosis": "10 UI insulina regular IV + 25g dextrosa (50ml DW50%)",
            "inicio": "10-20 minutos",
            "descenso_k": "0.5-1.5 mEq/L",
            "duracion": "4-6 horas",
            "precaucion": "Monitorear glicemia"
          },
          {
            "medicamento": "Salbutamol nebulizado",
            "dosis": "10-20mg en nebulización",
            "inicio": "30 minutos",
            "descenso_k": "0.5-1.0 mEq/L",
            "nota": "Sinergístico con insulina"
          },
          {
            "medicamento": "Bicarbonato de sodio",
            "indicacion": "Si acidosis metabólica asociada",
            "dosis": "50 mEq IV en 5 min",
            "inicio": "30-60 minutos",
            "controversia": "Eficacia cuestionable si no acidosis"
          }
        ]
      },

      "paso_3_eliminacion": {
        "opciones": [
          {
            "medicamento": "Furosemida",
            "dosis": "40-80mg IV",
            "cuando": "Función renal preservada",
            "nota": "Aumenta excreción urinaria K+"
          },
          {
            "medicamento": "Resinas (Kayexalate)",
            "dosis": "15-30g VO/rectal",
            "inicio": "2-4 horas",
            "limitacion": "Lenta, útil en hipercalemia crónica",
            "disponibilidad_cuba": "baja"
          },
          {
            "procedimiento": "Hemodiálisis",
            "indicacion": "K >7, cambios ECG severos, IR, refractaria a tratamiento",
            "mas_efectivo": "Elimina K+ definitivamente"
          }
        ]
      }
    },

    "manejo_cronico": {
      "dieta": "Restringir K+ <50 mEq/día",
      "suspender": ["IECA", "ARA-II", "Ahorradores de K+", "AINE"],
      "diureticos": "Furosemida si indicado"
    }
  },

  "hipocalemia": {
