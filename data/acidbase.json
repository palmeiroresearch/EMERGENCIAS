          },
          {
            "nombre": "Euvolémica",
            "causas": ["SIADH", "Hipotiroidismo", "Insuf suprarrenal"],
            "na_urinario": ">20"
          },
          {
            "nombre": "Hipervolémica",
            "causas": ["ICC", "Cirrosis", "Síndrome nefrótico", "IRC"],
            "na_urinario": "<20"
          }
        ]
      }
    },

    "sintomas": {
      "leves": ["Náuseas", "Confusión", "Cefalea"],
      "severos": ["Convulsiones", "Coma", "Edema cerebral"]
    },

    "tratamiento": {
