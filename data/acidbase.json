      "moderada": "2.5-3.0 mEq/L",
      "severa": "<2.5 mEq/L"
    },

    "manifestaciones": {
      "ecg": ["Aplanamiento onda T", "Onda U prominente", "↑QT", "Arritmias"],
      "neuromusculares": ["Debilidad", "Calambres", "Rabdomiólisis", "Íleo paralítico"]
    },

    "reposicion": {
      "oral": {
        "cuando": "K+ 2.5-3.5 y asintomático",
        "dosis": "40-100 mEq/día dividido",
        "presentacion": "KCl tabletas"
      },
      
      "intravenosa": {
        "cuando": "K+ <2.5 o sintomático",
        "concentracion_segura": "≤40 mEq/L",
        "velocidad_periferica": "≤10 mEq/h",
        "velocidad_central": "Hasta 20 mEq/h (monitoreo continuo)",
        "max_infusion": "200 mEq/24h",
        
        "ejemplo": {
          "preparacion": "40 mEq KCl en 1000ml SSN",
          "velocidad": "100 ml/h = 4 mEq/h (seguro)",
          "reevaluar": "Cada 20-40 mEq administrados"
        },
        
        "precauciones": [
          "NUNCA bolo IV directo",
          "Monitorear ECG si infusión rápida",
          "Verificar diuresis adecuada",
          "Corregir Mg si hipomagnesemia"
        ]
      }
    },

    "calculo_deficit": {
      "formula": "Déficit K+ (mEq) = (K deseado - K actual) × peso × 0.4",
      "ejemplo": "Paciente 70kg con K 2.5, desea 3.5: (3.5-2.5) × 70 × 0.4 = 28 mEq",
      "nota": "Fórmula aproximada, guiarse por niveles seriados"
    }
  },

  "hiponatremia": {
    "nombre": "Hiponatremia",
    "categoria": "electrolitos",
    "definicion": "Na <135 mEq/L",
    
    "clasificacion_osmolaridad": {
