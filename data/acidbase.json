        "tratamiento": [
          "Restricción hídrica 800-1000ml/día",
          "Furosemida + reposición Na oral",
          "Urea oral si disponible",
          "Tolvaptán (no en Cuba)"
        ]
      }
    },

    "precaucion_mielinolisis": {
      "riesgo": "Corrección rápida >10-12 mEq/L en 24h",
      "sintomas": "Debilidad, disartria, disfagia, parálisis pseudobulbar",
      "prevencion": "Corrección lenta, especialmente si crónica"
    }
  },

  "hipernatremia": {
